<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_navigation"
    app:startDestination="@id/registerFragment">

    <fragment
        android:id="@+id/navigation_home"
        android:name="com.unimib.eden.ui.home.HomeFragment"
        android:label="fragment_home"
        tools:layout="@layout/fragment_home" >
        <action
            android:id="@+id/action_navigation_home_to_loginFragment"
            app:destination="@id/loginFragment" />
        <action
            android:id="@+id/action_navigation_home_to_registerFragment"
            app:destination="@id/registerFragment" />
        <action
            android:id="@+id/action_navigation_home_to_colturaDetailsFragment"
            app:destination="@id/colturaDetailsFragment" />
    </fragment>
    <fragment
        android:id="@+id/navigation_profile"
        android:name="com.unimib.eden.ui.profilo.ProfiloFragment"
        android:label="fragment_profile"
        tools:layout="@layout/fragment_profilo" />
    <fragment
        android:id="@+id/loginFragment"
        android:name="com.unimib.eden.ui.authentication.LoginFragment"
        android:label="fragment_login"
        tools:layout="@layout/fragment_login" >
        <action
            android:id="@+id/action_loginFragment_to_mainActivity"
            app:destination="@id/mainActivity"
            app:enterAnim="@anim/slide_up"
            app:exitAnim="@anim/slide_down"/>
        <action
            android:id="@+id/action_loginFragment_to_registerFragment"
            app:destination="@id/registerFragment"
            app:enterAnim="@anim/slide_in_right" />
        <action
            android:id="@+id/action_loginFragment_to_forgotPasswordFragment"
            app:destination="@id/forgotPasswordFragment"
            app:enterAnim="@anim/slide_in_left"/>
    </fragment>
    <fragment
        android:id="@+id/forgotPasswordFragment"
        android:name="com.unimib.eden.ui.authentication.ForgotPasswordFragment"
        android:label="fragment_forgot_password"
        tools:layout="@layout/fragment_forgot_password" >
        <action
            android:id="@+id/action_forgotPasswordFragment_to_loginFragment"
            app:destination="@id/loginFragment"
            app:enterAnim="@anim/slide_in_right"/>
    </fragment>
    <fragment
        android:id="@+id/registerFragment"
        android:name="com.unimib.eden.ui.authentication.RegisterFragment"
        android:label="fragment_register"
        tools:layout="@layout/fragment_register" >
        <action
            android:id="@+id/action_registerFragment_to_loginFragment"
            app:destination="@id/loginFragment"
            app:enterAnim="@anim/slide_in_left" />
        <action
            android:id="@+id/action_registerFragment_to_mainActivity"
            app:destination="@id/mainActivity" />
    </fragment>
    <activity
        android:id="@+id/authenticationActivity"
        android:name="com.unimib.eden.ui.authentication.AuthenticationActivity"
        android:label="activity_authentication"
        tools:layout="@layout/activity_authentication" />
    <activity
        android:id="@+id/mainActivity"
        android:name="com.unimib.eden.ui.main.MainActivity"
        android:label="MainActivity" />
    <fragment
        android:id="@+id/colturaDetailsFragment"
        android:name="com.unimib.eden.ui.colturaDetails.ColturaDetailsFragment"
        android:label="fragment_coltura_details"
        tools:layout="@layout/fragment_coltura_details">
        <action
            android:id="@+id/action_colturaDetailsFragment_to_navigation_home"
            app:destination="@id/navigation_home" />
        <argument
            android:name="coltura"
            app:argType="com.unimib.eden.model.Coltura" />
    </fragment>
    <fragment
        android:id="@+id/navigation_stand"
        android:name="com.unimib.eden.ui.bancarella.BancarellaFragment"
        android:label="fragment_stand"
        tools:layout="@layout/fragment_stand" />

</navigation>