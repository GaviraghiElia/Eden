<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="0dp">

        <com.google.android.material.appbar.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.google.android.material.appbar.MaterialToolbar
                android:id="@+id/topAppBar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="?attr/actionBarSize"
                android:theme="@style/ToolbarTheme"
                app:menu="@menu/plant_details_app_bar_menu"
                app:navigationIcon="@drawable/ic_close_24dp" />

        </com.google.android.material.appbar.AppBarLayout>

        <ImageView
            android:id="@+id/imageViewPlantDetails"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_marginVertical="5dp"
            android:scaleType="centerCrop"
            android:src="@drawable/pomodoro">

        </ImageView>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginHorizontal="16dp">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center|center"
                android:orientation="horizontal"
                android:layout_marginTop="16dp">

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    style="@style/Widget.Material3.CardView.Filled"
                    android:layout_marginRight="8dp"
                    android:layout_gravity="left">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="140dp"
                            android:orientation="vertical"
                            android:padding="16dp">

                            <!-- Title, secondary and supporting text -->
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:drawableStart="@drawable/forest_24px"
                                android:text="@string/botanical_family"
                                android:drawablePadding="10dp"
                                android:layout_gravity="left"
                                android:textAppearance="?attr/textAppearanceTitleSmall"/>
                            <TextView
                                android:id="@+id/botanicalFamilyDetails"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/botanical_family"
                                android:layout_marginLeft="34dp"
                                android:drawablePadding="10dp"
                                android:layout_gravity="left"
                                android:textAppearance="?attr/textAppearanceTitleSmall"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:drawableStart="@drawable/sunny_24px"
                                android:text="@string/exposure"
                                android:drawablePadding="10dp"
                                android:layout_marginTop="10dp"
                                android:layout_gravity="left"
                                android:textAppearance="?attr/textAppearanceTitleSmall" />
                            <TextView
                                android:id="@+id/sunExposureDetails"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/exposure"
                                android:layout_marginLeft="34dp"
                                android:layout_gravity="left"
                                android:textAppearance="?attr/textAppearanceTitleSmall" />

                        </LinearLayout>

                    </LinearLayout>

                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    style="@style/Widget.Material3.CardView.Filled"
                    android:backgroundTint="#ffdad8"
                    android:layout_gravity="right">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="140dp"
                            android:orientation="vertical"
                            android:padding="16dp">

                            <!-- Title, secondary and supporting text -->
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:drawableStart="@drawable/min_temperature"
                                android:text="@string/min_temperature"
                                android:drawablePadding="10dp"
                                android:layout_gravity="left"
                                android:textAppearance="?attr/textAppearanceTitleSmall"/>
                            <TextView
                                android:id="@+id/minTemperatureDetails"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="5 gradi"
                                android:layout_marginLeft="34dp"
                                android:drawablePadding="10dp"
                                android:layout_gravity="left"
                                android:textAppearance="?attr/textAppearanceTitleSmall"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:drawableStart="@drawable/max_temperature"
                                android:text="@string/max_temperature"
                                android:drawablePadding="10dp"
                                android:layout_marginTop="10dp"
                                android:layout_gravity="left"
                                android:textAppearance="?attr/textAppearanceTitleSmall" />
                            <TextView
                                android:id="@+id/maxTemperatureDetails"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="5 gradi"
                                android:layout_marginLeft="34dp"
                                android:layout_gravity="left"
                                android:textAppearance="?attr/textAppearanceTitleSmall" />
                        </LinearLayout>
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center|center"
                android:orientation="horizontal"
                android:layout_marginTop="10dp">

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    style="@style/Widget.Material3.CardView.Filled"
                    android:backgroundTint="@color/md_theme_secondaryContainer"
                    android:layout_marginRight="8dp"
                    android:layout_gravity="left">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="140dp"
                            android:orientation="vertical"
                            android:padding="16dp">

                            <!-- Title, secondary and supporting text -->
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:drawableStart="@drawable/ic_baseline_start_24"
                                android:text="@string/sowing_start"
                                android:drawablePadding="10dp"
                                android:layout_gravity="left"
                                android:textAppearance="?attr/textAppearanceTitleSmall"/>
                            <TextView
                                android:id="@+id/sowingStartDetails"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/sowing_start"
                                android:layout_marginLeft="34dp"
                                android:drawablePadding="10dp"
                                android:layout_gravity="left"
                                android:textAppearance="?attr/textAppearanceTitleSmall"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:drawableStart="@drawable/ic_baseline_close_24"
                                android:text="@string/sowing_end"
                                android:drawablePadding="10dp"
                                android:layout_marginTop="10dp"
                                android:layout_gravity="left"
                                android:textAppearance="?attr/textAppearanceTitleSmall" />
                            <TextView
                                android:id="@+id/sowingEndDetails"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/sowing_end"
                                android:layout_marginLeft="34dp"
                                android:layout_gravity="left"
                                android:textAppearance="?attr/textAppearanceTitleSmall" />

                        </LinearLayout>

                    </LinearLayout>

                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    style="@style/Widget.Material3.CardView.Filled"
                    android:layout_gravity="right">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="140dp"
                            android:orientation="vertical"
                            android:padding="16dp">

                            <!-- Title, secondary and supporting text -->
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:drawableStart="@drawable/measure"
                                android:text="@string/required_space"
                                android:drawablePadding="10dp"
                                android:layout_gravity="left"
                                android:textAppearance="?attr/textAppearanceTitleSmall"/>
                            <TextView
                                android:id="@+id/requiredSpaceDetails"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/required_space"
                                android:layout_marginLeft="35dp"
                                android:drawablePadding="10dp"
                                android:layout_gravity="left"
                                android:textAppearance="?attr/textAppearanceTitleSmall"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:drawableStart="@drawable/height_measure"
                                android:text="@string/max_height_predicted"
                                android:drawablePadding="10dp"
                                android:layout_marginTop="10dp"
                                android:layout_gravity="left"
                                android:textAppearance="?attr/textAppearanceTitleSmall" />
                            <TextView
                                android:id="@+id/maxExpectedHeightDetails"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/max_height_predicted"
                                android:layout_marginLeft="34dp"
                                android:layout_gravity="left"
                                android:textAppearance="?attr/textAppearanceTitleSmall" />

                        </LinearLayout>
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center|center"
                android:orientation="horizontal"
                android:layout_marginTop="10dp">

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    style="@style/Widget.Material3.CardView.Filled"
                    android:layout_gravity="left">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:padding="16dp">

                            <!-- Title, secondary and supporting text -->
                            <TextView
                                android:layout_width="0dip"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:drawableStart="@drawable/soil_type"
                                android:text="@string/soil_type"
                                android:drawablePadding="10dp"
                                android:layout_marginTop="10dp"
                                android:layout_gravity="left"
                                android:textAppearance="?attr/textAppearanceTitleSmall" />
                            <TextView
                                android:id="@+id/soilTypeDetails"
                                android:layout_width="0dip"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="@string/soil_type"
                                android:layout_gravity="right"
                                android:textAppearance="?attr/textAppearanceTitleSmall" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:padding="16dp">
                            <TextView
                                android:layout_width="0dip"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:drawableStart="@drawable/baseline_edit_note_24"
                                android:text="@string/description_pianta"
                                android:drawablePadding="10dp"
                                android:layout_marginTop="10dp"
                                android:layout_gravity="left"
                                android:textAppearance="?attr/textAppearanceTitleSmall" />
                            <TextView
                                android:id="@+id/descriptionDetails"
                                android:layout_width="0dip"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="@string/description_pianta"
                                android:layout_gravity="right"
                                android:textAppearance="?attr/textAppearanceTitleSmall" />

                        </LinearLayout>

                    </LinearLayout>

                </com.google.android.material.card.MaterialCardView>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dip"
            android:layout_weight="1"
            android:gravity="center|bottom"
            android:orientation="vertical"
            android:layout_marginTop="10dp"
            android:layout_marginHorizontal="16dp">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/phasesTitleSection"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:icon="@drawable/ic_baseline_keyboard_arrow_down_24"
                app:iconPadding="3dp"
                app:iconGravity="textEnd"
                style="@style/Widget.Material3.Button.IconButton.Filled"
                android:text="@string/phase_description_button"
                android:layout_gravity="center_horizontal"
                android:padding="12dp"
                android:layout_marginBottom="16dp"
                android:layout_marginTop="16dp"
                android:minHeight="48dp"
                android:focusable="true"/>

            <LinearLayout
                android:id="@+id/linearLayoutPhasesView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:visibility="gone"
                android:orientation="vertical">

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/phasesRecyclerView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp">
                </androidx.recyclerview.widget.RecyclerView>
            </LinearLayout>
        </LinearLayout>


    </LinearLayout>

</androidx.core.widget.NestedScrollView>