<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Plant Image -->
    <ImageView
        android:id="@+id/imageViewFaseFull"
        android:layout_width="128dp"
        android:layout_height="128dp"
        android:src="@drawable/growing_plant_24"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="16dp"/>

    <!-- Ultimo Innaffiamento -->
    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/textViewUltimoInnaffiamentoFull"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Ultimo Innaffiamento"
        android:textSize="20dp"
        android:drawableStart="@drawable/watering_can_24"
        android:drawablePadding="8dp"
        android:gravity="center_vertical"
        android:layout_marginTop="16dp"/>

    <!-- Fase Attuale -->
    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/textViewFaseAttualeFull"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Fase Attuale"
        android:textSize="20dp"
        android:drawableStart="@drawable/growing_plant_24"
        android:drawablePadding="8dp"
        android:gravity="center_vertical"
        android:layout_marginTop="16dp"/>

    <!-- Data Inserimento -->
    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/textViewDataInserimentoFull"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Data Inserimento"
        android:textSize="20dp"
        android:drawableStart="@drawable/planting_24"
        android:drawablePadding="8dp"
        android:gravity="center_vertical"
        android:layout_marginTop="16dp"/>

    <!-- Note -->
    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/textViewNoteFull"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Note"
        android:textSize="20dp"
        android:drawableStart="@drawable/note_sticky_24"
        android:drawablePadding="8dp"
        android:gravity="center_vertical"
        android:layout_marginTop="16dp"/>

    <!-- Quantity -->
    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/textViewQuantityFull"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="QuantitÃ "
        android:textSize="20dp"
        android:drawableStart="@drawable/seeds_24"
        android:drawablePadding="8dp"
        android:gravity="center_vertical"
        android:layout_marginTop="16dp"/>

    <!-- Button to View All Details -->
    <Button
        android:id="@+id/buttonViewAllDetails"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/vedi_dettagli_pianta"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="16dp"/>

</LinearLayout>
