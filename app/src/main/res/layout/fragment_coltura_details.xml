<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <!-- Plant Image -->
    <ImageView
        android:id="@+id/imageViewFaseFull"
        android:layout_width="128dp"
        android:layout_height="128dp"
        android:src="@drawable/growing_plant"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="16dp"/>

    <!-- Ultimo Innaffiamento -->
    <ImageView
        android:id="@+id/imageViewUltimoInnaffiamentoFull"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/watering_can_with_water_drops"
        android:layout_below="@id/imageViewFaseFull"
        android:layout_alignParentStart="true"
        android:layout_marginTop="16dp"/>

    <TextView
        android:id="@+id/textViewUltimoInnaffiamentoFull"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:text="Ultimo Innaffiamento"
        android:textSize="18dp"
        android:layout_toEndOf="@id/imageViewUltimoInnaffiamentoFull"
        android:layout_alignTop="@id/imageViewUltimoInnaffiamentoFull"
        android:layout_marginStart="12dp"
        android:gravity="center_vertical"/>

    <!-- Fase Attuale -->
    <ImageView
        android:id="@+id/imageViewFaseAttualeFull"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/growing_plant"
        android:layout_below="@id/imageViewUltimoInnaffiamentoFull"
        android:layout_alignParentStart="true"
        android:layout_marginTop="16dp"/>

    <TextView
        android:id="@+id/textViewFaseAttualeFull"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:text="Fase Attuale"
        android:textSize="18dp"
        android:layout_toEndOf="@id/imageViewFaseAttualeFull"
        android:layout_alignTop="@id/imageViewFaseAttualeFull"
        android:layout_marginStart="12dp"
        android:gravity="center_vertical"/>

    <!-- Data Inserimento -->
    <ImageView
        android:id="@+id/imageViewDataInserimentoFull"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/planting"
        android:layout_below="@id/imageViewFaseAttualeFull"
        android:layout_alignParentStart="true"
        android:layout_marginTop="16dp"/>

    <TextView
        android:id="@+id/textViewDataInserimentoFull"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:text="Data Inserimento"
        android:textSize="18dp"
        android:layout_toEndOf="@id/imageViewDataInserimentoFull"
        android:layout_alignTop="@id/imageViewDataInserimentoFull"
        android:layout_marginStart="12dp"
        android:gravity="center_vertical"/>

    <!-- Note -->
    <ImageView
        android:id="@+id/imageViewNoteFull"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/note_sticky"
        android:layout_below="@id/imageViewDataInserimentoFull"
        android:layout_alignParentStart="true"
        android:layout_marginTop="16dp"/>

    <TextView
        android:id="@+id/textViewNoteFull"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:text="Note"
        android:textSize="18dp"
        android:layout_toEndOf="@id/imageViewNoteFull"
        android:layout_alignTop="@id/imageViewNoteFull"
        android:layout_marginStart="12dp"
        android:gravity="center_vertical"/>

    <!-- Quantity -->
    <ImageView
        android:id="@+id/imageViewQuantityFull"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/seeds"
        android:layout_below="@id/imageViewNoteFull"
        android:layout_alignParentStart="true"
        android:layout_marginTop="16dp"/>

    <TextView
        android:id="@+id/textViewQuantityFull"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:text="QuantitÃ "
        android:textSize="18dp"
        android:layout_toEndOf="@id/imageViewQuantityFull"
        android:layout_alignTop="@id/imageViewQuantityFull"
        android:layout_marginStart="12dp"
        android:gravity="center_vertical"/>

    <!-- Button to View All Details -->
    <Button
        android:id="@+id/buttonViewAllDetails"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/vedi_dettagli_pianta"
        android:layout_below="@id/imageViewQuantityFull"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"/>

</RelativeLayout>
