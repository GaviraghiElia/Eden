<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/Widget.Material3.CardView.Elevated"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="10dp"
    android:layout_marginVertical="5dp"
    android:clickable="false"
    app:rippleColor="@color/md_theme_onSurfaceVariant"
    android:backgroundTint="@color/md_theme_surfaceContainerLow">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="12dp">

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/imageViewFase"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardCornerRadius="50dp"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true"
            android:layout_marginEnd="16dp"
            app:cardPreventCornerOverlap="false">
            <ImageView

                android:layout_width="80dp"
                android:layout_height="80dp"
                android:scaleType="fitCenter"
                android:src="@drawable/note_illustration"
                />
        </com.google.android.material.card.MaterialCardView>

        <TextView
            android:id="@+id/textViewPianta"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Plant Name"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/md_theme_secondary"
            android:layout_toEndOf="@id/imageViewFase"
            android:layout_alignTop="@id/imageViewFase"
            android:layout_margin="4dp"
            android:gravity="center_vertical"/>

        <TextView
            android:id="@+id/textViewDaysNumber"
            android:layout_width="wrap_content"
            android:layout_height="24dp"
            android:text="X giorni"
            android:textSize="16sp"
            android:textColor="@color/md_theme_primary"
            android:layout_toEndOf="@id/imageViewFase"
            android:layout_below="@id/textViewPianta"
            android:layout_marginStart="4dp"
            android:drawableStart="@drawable/garden_watering_can_24_ok"
            android:drawablePadding="8dp"
            android:layout_margin="4dp"
            android:gravity="center_vertical"/>

        <TextView
            android:id="@+id/textViewDate"
            android:layout_width="wrap_content"
            android:layout_height="24dp"
            android:text="Data"
            android:textSize="16sp"
            android:textColor="@color/md_theme_primary"
            android:layout_toEndOf="@id/imageViewFase"
            android:layout_below="@id/textViewDaysNumber"
            android:layout_marginStart="4dp"
            android:drawableStart="@drawable/baseline_calendar_month_24"
            android:drawablePadding="8dp"
            android:layout_margin="4dp"
            android:gravity="center_vertical"/>



    </RelativeLayout>
</com.google.android.material.card.MaterialCardView>
